<h1>Listing books</h1>

<table>
  <tr>
    <th>id</th>
    <th>Isdn</th>
    <th>Name</th>
    <th>Author</th>
    <th>Publisher</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.id %></td>
    <td><%= book.isdn %></td>
    <td><%= book.name %></td>
    <td><%= book.author %></td>
    <td><%= book.publisher %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?',
    :method => :delete %></td>
<td>
  <% book.user_books.each do |u| %>
    <span><img src="<%= u.img   %>" alt="<%= u.twitter_id %>"></span>
  <% end %>
</td>
  </tr>
<% end %>
</table>

